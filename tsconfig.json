{
    // https://www.typescriptlang.org/tsconfig
    "compilerOptions": {
        "baseUrl": "./",

        "allowJs": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedParameters": true,

        "module": "CommonJS",
        "moduleResolution": "classic",

        // "declaration": true,
        // "declarationDir": "typings",
        // "outDir": "dist",
        "outDir": "./",
        "newLine": "lf",
        "esModuleInterop": true,

        "lib": ["ES5"],
        "target": "ES5"
    },

    "include": ["index.ts", "typings", "src"],
    "exclude": ["dist"]
}
